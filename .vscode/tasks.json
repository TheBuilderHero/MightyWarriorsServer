{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/source.cpp",
                "${workspaceFolder}/Characters.cpp",
                "${workspaceFolder}/Players.cpp ",
                "${workspaceFolder}/Enemies.cpp",
                "${workspaceFolder}/Cipher.cpp",
                "${workspaceFolder}/Battle.cpp",
                "${workspaceFolder}/WorldMap.cpp",
                "${workspaceFolder}/PlayerElements/Kit.cpp",
                "${workspaceFolder}/PlayerElements/Weapons.cpp",
                "${workspaceFolder}/NPCData/NPC.cpp ",
                "${workspaceFolder}/globalVariables.cpp",
                "-o",
                "${workspaceFolder}/source",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}